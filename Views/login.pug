doctype html
html
    include head
    body
        header
        include nav                    
        main
            div#contentholder.d-flex.justify-content-center
                section#userlogin
                    h5 Please log in to view your request status and price information
                    form(action="/login" method="POST" class="form-registration")
                        label(for="email") Username:
                        input(type="text" id="email" name= "email" class="form-control")
                        label(for="password") Password:
                        input(type="password" id="password" name="password" class="form-control")
                        input(type="submit" value="Submit" class="btn btn-primary btn-lg")
                        label(id="error-message")
        footer &copy; Copyright 2021